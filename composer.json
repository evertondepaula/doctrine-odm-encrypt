{
    "name": "epsoftware/doctrine-odm-encrypt",
    "type": "library",
    "keywords": ["doctrine", "aes256", "encrypt", "decrypt"],
    "license": "MIT",
    "description": "Package encrypts and decrypts Doctrine fields through life cycle events.",
    "require": {
        "php": "^7.0",
        "doctrine/orm": "^2.5"
    },
    "require-dev": {
        "illuminate/encryption": "^5.4",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Epsoftware\\Doctrine\\ODM\\Encrypt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Epsoftware\\Doctrine\\ODM\\Encrypt\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Everton de Paula",
            "email": "everton.projetos@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    }
}
